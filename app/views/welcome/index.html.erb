
<script>
    var i=1;
    $(document).ready(function(){
        $(".nav li").removeClass("active");
        $("#mninicio").addClass("active");

        $('.btngaleria').click(function(e){
            $('.btngaleria').removeClass("active");
            $('.imagen-galeria').attr("src",'/assets/'+$(this).text()+'.jpg')
            clearInterval(interval);
        });

    })

    var explode = function(){
        i=i+1;
        $('#contenedorimg').hide().fadeIn('slow');
        $('.imagen-galeria').attr("src",'/assets/'+i+'.jpg');
        for (var j=1; j <=5; j++){
            if (i==j){
                $("#btn"+j).addClass("active");
            }
            else{
                $("#btn"+j).removeClass("active");
            }
        }
        if(i==5){i=0;}
    };
    var interval=setInterval(explode, 3000);
</script>


